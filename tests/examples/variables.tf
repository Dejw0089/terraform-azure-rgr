variable "greeting_prefix" {
  description = "A prefix string to use in the hello world message."
  type        = string
  default     = "Hello"

  validation {
    condition     = length(var.greeting_prefix) > 0
    error_message = "The greeting_prefix must not be empty."
  }
} 